{
  "name": "nextgenai-coding-assistant",
  "displayName": "NextGenAI Coding Assistant",
  "description": "NextGen AI assistant â€” chat + inline suggestions with per-feature models and multi-provider config",
  "version": "0.0.1",
  "engines": { "vscode": "^1.105.0" },
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        { "id": "nextgenai", "title": "NextGenAI", "icon": "media/icon.svg" }
      ]
    },
    "views": {
      "nextgenai": [
        { "type": "webview", "id": "nextgenai.chatView", "name": "Chat" }
      ]
    },
    "commands": [
      { "command": "nextgenai.openSettings", "title": "NextGenAI: Settings" },
      { "command": "nextgenai.pinFile", "title": "NextGenAI: Pin File to Chat" },
      { "command": "nextgenai.toggleInline", "title": "NextGenAI: Toggle Inline Suggestions" }
    ],
    "configuration": {
      "title": "NextGenAI",
      "properties": {
        "nextgenai.baseUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Backend API URL for NextGenAI server"
        },
        "nextgenai.enableInline": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic inline suggestions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "axios": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.2"
  }
}
